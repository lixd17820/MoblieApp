<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/select_img"
    android:padding="5dip">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="40dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/select_img"
        android:tint="?attr/editTextColor"
        app:srcCompat="@drawable/ic_ok_black_24dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dip"
        android:layout_centerVertical="true"
        android:tint="?attr/editTextColor"
        app:srcCompat="@drawable/ic_check_blank_black_24dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toLeftOf="@+id/imageView2"
        android:ellipsize="none"
        android:inputType="none"
        android:singleLine="true"
        android:text="@string/item_line1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toLeftOf="@+id/imageView2"
        android:ellipsize="none"
        android:singleLine="true"
        android:text="@string/item_line2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>